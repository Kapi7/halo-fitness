# Server
PORT=3001
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database (SQLite path relative to server directory)
DATABASE_URL=./data/halo.db

# Google OAuth (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# For local dev, use localhost. For production on Render:
# GOOGLE_REDIRECT_URI=https://halo-fitness-api.onrender.com/api/auth/google/callback
# GOOGLE_AUTH_REDIRECT_URI=https://www.halo-fitness.com/auth/google/callback
# GOOGLE_CALENDAR_REDIRECT_URI=https://www.halo-fitness.com/auth/calendar/callback
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback
GOOGLE_AUTH_REDIRECT_URI=http://localhost:5173/auth/google/callback
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:5173/auth/calendar/callback

# Email (SMTP - for booking confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=your-email@gmail.com

# Admin email (the admin user who connected their Google Calendar)
ADMIN_EMAIL=admin@example.com

# Admin emails for notifications (comma-separated)
ADMIN_EMAILS=admin@example.com

# Admin WhatsApp numbers (comma-separated, with country code)
ADMIN_WHATSAPP_NUMBERS=

# Twilio WhatsApp API (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Frontend URL (for links in emails)
FRONTEND_URL=http://localhost:5173
